<%- include("partials/headerLogin") -%>

<div class="jumbotron container div-content">
  <h3>View Prescription Status</h3>
  <form method="post" action="/prescriptions/viewPrescriptionStatus">

    <div class="form-group row">
      <label for="preID" class="col-sm-2 col-form-label">Prescription ID:</label>
      <div class="col-sm-10">
        <input type="text" id="preID" name="pre_id" class="form-control w-25" maxlength="11" placeholder="Enter Pres ID" pattern="[0-9]{11}" required>
      </div>
    </div>

    <input type="submit" value="Find Patient" class="btn btn-primary text-light float-left st-submit">
  </form>
</div>

