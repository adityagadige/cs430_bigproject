<%- include("partials/header") -%>
<div class="jumbotron container div-content">
  <h3>Add Prescription</h3>
  <form method="post" action="/prescriptions/addPrescription">
    <div class="form-group row">
      <label for="preID" class="col-sm-2 col-form-label">Prescription ID:</label>
      <div class="col-sm-10">
        <input type="text" id="preID" name="pre_id" class="form-control w-50" maxlength="11" pattern="[0-9]{11}" placeholder="Enter Pres ID" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="presStatus" class="col-sm-2 col-form-label">Status</label>
      <div class="col-sm-10">
        <select id="presStatus" required name="pres_status" class="custom-select w-50">
          <option value="" disabled selected>Select Status</option>
          <option value="COMPLETED">COMPLETED</option>
          <option value="PENDING">PENDING</option>
          <option value="READY TO GO">READY TO GO</option>
          <option value="CANCELLED">CANCELLED</option>
        </select>
      </div>
    </div>

    <div class="form-group row" id="dTime">
      <label for="dropTime" class="col-sm-2 col-form-label">Dropoff Time</label>
      <div class="col-sm-10">
        <input type="datetime-local" id="dropTime" name="drop_time" class="form-control w-50">
      </div>
    </div>

    <div class="form-group row" id="pTime">
      <label for="pickTime" class="col-sm-2 col-form-label">Pickup Time</label>
      <div class="col-sm-10">
        <input type="datetime-local" id="pickTime" name="pick_time" class="form-control w-50">
      </div>
    </div>

    <div class="form-group row">
      <label for="patientSSN" class="col-sm-2 col-form-label">Patient SSN:</label>
      <div class="col-sm-10">
        <select id="patientSSN" required name="patient_ssn" class="custom-select w-50">
          <option value="" disabled selected>Select</option>
          <% for(var i in rows[1]){%>
          <option value="<%=rows[1][i].ssn%>"><%=rows[1][i].ssn%></option>
          <%}%>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label for="phySSN" class="col-sm-2 col-form-label">Physician SSN:</label>
          <div class="col-sm-10">
            <select id="phySSN" required name="phy_ssn" class="custom-select w-50">
              <option value="" disabled selected>Select</option>
                <% for(var i in rows[2]){%>
          <option value="<%=rows[2][i].phy_ssn%>"><%=rows[2][i].phy_ssn%></option>
          <%}%>
            </select>
          </div>
        </div>

    <div class="form-group row">
      <label for="presDate" class="col-sm-2 col-form-label">Prescription Date:</label>
      <div class="col-sm-10">
        <input type="date" id="presDate" name="pres_date" class="form-control w-50" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="quantity" class="col-sm-2 col-form-label">Quantity:</label>
      <div class="col-sm-10">
        <input type="number" id="quantity" name="qnt" class="form-control w-50" min="1" max="20" required>
      </div>
    </div>



    <div class="form-group row">
      <label for="tradeName" class="col-sm-2 col-form-label">Drug:</label>
      <div class="col-sm-10">
        <select id="tradeName" required name="trade_name" class="custom-select w-50">
          <option value="" disabled selected>Select</option>
            <% for(var i in rows[0]){%>
          <option value="<%=rows[0][i].trade_name%>"><%=rows[0][i].trade_name%></option>
          <%}%>
        </select>
      </div>
    </div>

    <input type="submit" value="Submit" class="btn btn-primary text-light float-left st-submit">
  </form>
</div>

<%- include("partials/footer") -%>
