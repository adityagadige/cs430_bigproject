<%- include("partials/header") -%>

<div class="jumbotron container div-content">
  <h3>Update Contract</h3>
  <form method="post" action="/contracts/updateContract1">

    <div class="form-group row">
      <label for="pharmID" class="col-sm-2 col-form-label">Pharmacy ID:</label>
      <div class="col-sm-10">
        <input type="text" id="pharmID" name="pharm_id" value='<%=row[0].pharm_id%>' class="form-control w-25" maxlength="20" readonly>
      </div>
    </div>

    <div class="form-group row">
      <label for="pharmCo" class="col-sm-2 col-form-label">Pharmaceutical Company:</label>
      <div class="col-sm-10">
        <input type="text" id="pharmCo" name="pharm_co" value='<%=row[0].pharm_co_name%>' class="form-control w-25" maxlength="20" readonly>
      </div>
    </div>


    <div class="form-group row">
      <label for="supName" class="col-sm-2 col-form-label">Supervisor Name:</label>
      <div class="col-sm-10">
        <input type="text" id="supName" name="sup_name" class="form-control w-25" maxlength="20" value='<%=row[0].supervisor%>' required>
      </div>
    </div>

    <div class="form-group row">
      <label for="contract" class="col-sm-2 col-form-label">Contract:</label>
      <div class="col-sm-10">
        <textarea id="contract" required name="contract" class="form-control w-50" rows="10" maxlength="4000" ><%=row[0].text%></textarea>
      </div>
    </div>

    <div class="form-group row">
      <label for="startDate" class="col-sm-2 col-form-label">Start Date:</label>
      <div class="col-sm-10">
        <input type="date" id="startDate" name="start_date" value='<%=row[0].start_date%>' class="form-control w-25" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="endDate" class="col-sm-2 col-form-label">End Date:</label>
      <div class="col-sm-10">
        <input type="date" id="endDate" name="end_date" value='<%=row[0].end_date%>' class="form-control w-25" required>
      </div>
    </div>

    <input type="submit" value="Update" class="btn btn-primary text-light float-left st-submit">
  </form>
</div>

<%- include("partials/footer") -%>
